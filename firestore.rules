rules_version = '2';

// Firestore Security Rules for PeakNorth Blog Admin
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Blog Posts Collection
    match /posts/{postId} {
      // Allow authenticated users to read and write
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      
      // For production, you might want to restrict write access to admin users only
      // allow read: if true; // Public read
      // allow write: if isAuthenticated() && request.auth.token.admin == true;
    }
    
    // Blog Ideas Collection
    match /ideas/{ideaId} {
      // Allow authenticated users to read and write
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Settings Collection
    match /settings/{settingId} {
      // Allow authenticated users to read and write settings
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}


